@model IEnumerable<Blog>

@foreach (var item in Model)
{
    <tr>
        <td class="cell-medium">
            @item.Body.ToPlainText()
        </td>
        <td class="cell-medium">
            @item.Title
        </td>
         <td class="image-cell">
            @if (!string.IsNullOrWhiteSpace(item.ImageURL))
            {
                <img src="~/uploads/images/@item.ImageURL" />
            }
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.PublishDate)
        </td>
        <td class="operation">
            <a asp-action="edit" asp-route-id="@item.Id" class="btn btn-warning">
                <i class="fa fa-pencil"></i>
            </a>
            <a asp-action="details" asp-route-id="@item.Id" class="btn btn-secondary">
                <i class="fa fa-eye"></i>
            </a>
            <a onclick="removeEntity(event,@item.Id,'@item.Body')" class="btn btn-danger">
                <i class="fa fa-trash"></i>
            </a>
        </td>
    </tr>
}



